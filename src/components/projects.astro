---
const { projects } = Astro.props;
---

<div
  class="flex flex-col bg-zinc-300 md:hover:bg-zinc-600 transition ease-in-out duration-300 w-full group p-20 mt-8 justify-center items-center space-y-8"
>
  <div
    class="text-center font-semibold uppercase text-gray-500 transition ease-in-out duration-300 md:group-hover:text-white md:group-hover:scale-110 text-xl"
  >
    projects
  </div>
  <div class="flex flex-col md:w-1/2 space-y-8">
    {
      projects.map((project) => (
        <div class="flex flex-col space-y-4 md:group-hover:scale-110 duration-300 transition ease-in-out">
          <div class="text-blue-500 md:group-hover:text-blue-400 text-lg font-semibold text-start">
            {project["name"]}
          </div>
          <div class="text-gray-500 md:group-hover:text-gray-300 text-base font-light">
            {project["summary"]}
          </div>
        </div>
      ))
    }
  </div>
</div>
