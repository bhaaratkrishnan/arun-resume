---
import profile from "../images/profile.jpg";
import resume from "../assets/resume.pdf";
const {summary, location, phone, emailId } = Astro.props;
---

<div class="bg-[#2b2b2b]" id="aboutMe">
  <div class="flex flex-col md:flex-row px-10 py-20 h-screen md:h-auto">
    <!-- profile image  -->
    <div class="basis-1/4 flex justify-center items-center">
      <img
        src={profile}
        class="rounded-full object-cover h-32 w-32 hover:scale-110 transition ease-in-out duration-300"
        alt=""
      />
    </div>
    <!-- content  -->
    <div class="basis-3/4 flex flex-col justify-start">
      <!-- about me  -->
      <div class="text-xl md:text-2xl text-white font-bold">About Me</div>
      <div class="text-[#7a7a7a] text-base max-w-4xl  leading-6 md:leading-8">
        {summary}
      </div>
      <!-- contact and resume  -->
      <div class="flex flex-col md:flex-row mt-10">
        <!-- contact details  -->
        <div class="md:basis-1/4 flex flex-col">
          <div class="text-white text-2xl font-bold">Contact Details</div>
          <!-- address  -->
          <div class="text-[#7a7a7a] text-base leading-8 mt-2">
            {location["city"]} <br />
            {location["region"]}, {location["postalCode"]} <br />
            {location["countryCode"]} <br />
            <span
              class="text-white hover:text-blue-500 transition-colors ease-in-out"
            >
              <a href="">{phone}</a>
            </span>
            <br />
            <span
              class="text-white hover:text-blue-500 transition-colors ease-in-out"
            >
              <a href="">{emailId}</a>
            </span>
          </div>
        </div>
        <!-- download resume button  -->
        <a href={resume} download="ArunManoharManoharanResume.pdf">
          <div class="md:basic-1/4 flex flex-col justify-center group">
            <div
              class="flex flex-row space-x-4 bg-[#444] h-20 w-64 p-3 m-5 justify-center items-center transition group-hover:bg-white"
            >
                <!-- download icon  -->
              <i
                class="fa-solid fa-download fill-current text-white text-md group-hover:text-blue-500 transition"
              ></i>
              <!-- content  -->
              <div
                class="text-white font-bold text-md group-hover:text-blue-500 transition"
              >
                Download Resume
              </div>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>
</div>
